{
    "name": "devtheorem/php-handlebars",
    "description": "A fast, spec-compliant PHP implementation of Handlebars.",
    "keywords": [
        "Handlebars",
        "PHP",
        "template",
        "render",
        "compile"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Theodore Brown",
            "email": "theodorejb@outlook.com"
        },
        {
            "name": "Zordius Chen",
            "email": "zordius@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.86",
        "jbboehr/handlebars-spec": "dev-master",
        "phpstan/phpstan": "^2.1.22",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "DevTheorem\\Handlebars\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevTheorem\\Handlebars\\Test\\": "tests/"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze",
        "cs-fix": "php-cs-fixer fix -v",
        "test": "vendor/bin/phpunit tests"
    },
    "config": {
        "sort-packages": true
    }
}
